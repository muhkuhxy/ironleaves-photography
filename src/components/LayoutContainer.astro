---
type Props = {
  retractable?: boolean;
  tag?: string;
  fluid?: boolean;
  class?: string;
};

const {
  retractable = false,
  Tag = "div",
  fluid = false,
  class: classes,
} = Astro.props;

const extraClasses = getContainerClasses(fluid, retractable);

export function getContainerClasses(fluid: boolean, retractable: boolean) {
  const classes = ["xl:mx-auto xl:px-16 px-8 md:px-16"];
  // fluid has no max-width
  if (!fluid) {
    if (retractable) {
      classes.push("w-full md:w-auto md:max-w-screen-xl");
    } else {
      classes.push("max-w-screen-xl");
    }
  }
  return classes;
}
---

<Tag class:list={[classes, extraClasses]}>
  <slot />
</Tag>
