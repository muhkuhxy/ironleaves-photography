---
type Props = {
  retractable?: boolean;
  tag?: string;
  fluid?: boolean;
  class?: string;
};
let {
  retractable = false,
  tag = "div",
  fluid = false,
  class: classes,
} = Astro.props;

classes += "xl:mx-auto xl:px-16 px-8 md:px-16";
// fluid has no max-width
if (!fluid) {
  if (retractable) {
    classes += "w-full md:w-auto md:max-w-screen-xl";
  } else {
    classes += "max-w-screen-xl";
  }
}
---

<tag class:list={classes}>
  <slot />
</tag>
