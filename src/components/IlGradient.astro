---
type Props = {
  class?: string
  halfHeight?: boolean
  halfOpacity?: boolean
  direction?: string
}

const {
  class: classes,
  halfHeight,
  direction = "top",
  halfOpacity,
} = Astro.props
---

<div
  class:list={[
    classes,
    "absolute bottom-0 left-0 right-0 top-0 from-black",
    {
      "bg-gradient-to-tr": direction === "top-right",
      "bg-gradient-to-br": direction === "bottom-right",
      "bg-gradient-to-t": direction === "top",
      "bg-gradient-to-r": direction === "right",
      "bg-gradient-to-l": direction === "left",
      "top-1/2": halfHeight,
      "top-0": !halfHeight,
      "opacity-25": halfOpacity,
      "opacity-50": !halfOpacity,
    },
  ]}
>
</div>
