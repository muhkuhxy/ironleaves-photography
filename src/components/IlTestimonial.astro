---
import LayoutSpacer from "./LayoutSpacer.astro"
import SectionContent from "./SectionContent.astro"

type Props = {
  testimonial: { name: string; imgSrc: string; imgAlt?: string; text: string }
}

const { testimonial } = Astro.props
---

<div
  class="grid grid-rows-[auto,auto] lg:grid-rows-1 grid-cols-1 lg:grid-cols-2"
>
  <img
    class="object-cover w-full h-full lg:order-2"
    src={testimonial.imgSrc}
    alt={testimonial.imgAlt}
  />
  <SectionContent
    class="bg-emerald text-white lg:order-1 flex flex-col justify-center w-full"
    fluid={true}
  >
    <h3 class="caption font-normal">Kundenstimme</h3>
    <LayoutSpacer />
    <div class="relative flex flex-nowrap justify-self-center">
      <div class="relative self-end -ml-4 sm:ml-0 pr-4 sm:pr-6">
        <div
          class="relative caption text-[7rem] sm:text-[15rem] leading-[0] top-[-4.5rem] sm:-top-24 opacity-50"
        >
          &bdquo;
        </div>
      </div>
      <div class="flex flex-col">
        <div>{testimonial.text}</div>
        <div class="text-right mt-4">&ndash; {testimonial.name}</div>
      </div>
      <div
        class="relative caption text-[7rem] sm:text-[15rem] sm:-ml-2 leading-[0] top-8 sm:top-14 opacity-50"
      >
        &ldquo;
      </div>
    </div>
  </SectionContent>
</div>
