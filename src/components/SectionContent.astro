---
import LayoutContainer from "../components/LayoutContainer.astro";

type Props = {
  class?: string;
  fluid?: boolean;
  animation?: string;
  ref?: string;
};

const { class: classes, fluid = false, animation, ref } = Astro.props;
---

<LayoutContainer
  ref={ref}
  class={`${classes ?? ""} py-12 lg:py-16 xl:py-20`}
  {...{animation,fluid}}
>
  <slot />
</LayoutContainer>
