---
import LayoutContainer from "../components/LayoutContainer.astro";

type Props = {
  class?: string;
  fluid?: boolean;
  animation?: string;
  ref?: string;
  fluffy?: boolean;
};

const { class: classes, fluffy, fluid, animation, ref } = Astro.props;
---

<LayoutContainer
  ref={ref}
  class={`${classes ?? ""} ${
    fluffy ? "2xl:py-[min(15vh,10rem)]" : ""
  } py-12 lg:py-16 xl:py-20`}
  {...{animation,fluid}}
>
  <slot />
</LayoutContainer>
